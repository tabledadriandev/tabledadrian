{
  "name": "Table d'Adrian Wellness",
  "short_name": "TableDAdrian",
  "description": "Web3-powered longevity and wellness platform",
  "start_url": "/app",
  "display": "standalone",
  "background_color": "#FAF8F3",
  "theme_color": "#D4AF37",
  "orientation": "portrait-primary",
  "scope": "/",
  "icons": [
    {
      "src": "/icon.ico",
      "sizes": "any",
      "type": "image/x-icon",
      "purpose": "any maskable"
    },
    {
      "src": "/icon.ico",
      "sizes": "192x192",
      "type": "image/x-icon",
      "purpose": "any maskable"
    },
    {
      "src": "/icon.ico",
      "sizes": "512x512",
      "type": "image/x-icon",
      "purpose": "any maskable"
    }
  ],
  "categories": ["health", "lifestyle", "food", "wellness"],
  "screenshots": [],
  "shortcuts": [
    {
      "name": "Health Tracking",
      "short_name": "Health",
      "description": "Track your health metrics",
      "url": "/app/health",
      "icons": [{ "src": "/icons/health.png", "sizes": "192x192" }]
    },
    {
      "name": "Meal Plans",
      "short_name": "Meals",
      "description": "View your meal plans",
      "url": "/app/meals",
      "icons": [{ "src": "/icons/meals.png", "sizes": "192x192" }]
    },
    {
      "name": "AI Coach",
      "short_name": "Coach",
      "description": "Chat with AI health coach",
      "url": "/app/coach",
      "icons": [{ "src": "/icons/coach.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/app/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/app/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ]
}

